<div class="text-center">
  <h1>{{post.post_title}}</h1>
  <p>{{post.post_body}}</p>
 
  <p>Created by {{post.user.name}} on {{post.date_created}}</p>
  
  {{#each post.answers as |answer|}}
    <div>
      <p>Answer: {{answer.answer_body}}</p>
      <p>{{answer.user.name}}</p>
      {{!-- {{#if logged_in}} --}}
        {{!-- {{#if (eq answer.user_id ../session.user_id)}} --}}  
        <button type="click" class="btn-delete" data-answer-id="{{answer.answer_id}}">Delete</button>
        <button id="flag-post-btn"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M3 3v1.5M3 21v-6m0 0l2.77-.693a9 9 0 016.208.682l.108.054a9 9 0 006.086.71l3.114-.732a48.524 48.524 0 01-.005-10.499l-3.11.732a9 9 0 01-6.085-.711l-.108-.054a9 9 0 00-6.208-.682L3 4.5M3 15V4.5" />
</svg>
</button>
        {{!-- {{/if}} --}}
      {{!-- {{/if}} --}}
    </div>
    <hr>
  {{/each}}
</div>

<div>
  <form id="add-answer-form">
    <label for="answer-body">Your answer:</label>
    <textarea id="answer-body" name="answer-body" placeholder="Add your answer here ..." required></textarea>
    <input visible="hidden" name="post-id" id="post-id" value="{{post.post_id}}">
    {{!-- {{#if logged_in}} --}}
      <button type="submit">Add your answer</button>
    {{!-- {{else}} --}}
      {{!-- <p>Please log in to add an answer.</p> --}}
    {{!-- {{/if}} --}}
  </form>
</div>



