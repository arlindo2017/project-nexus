<div class="flex">
    <div>
       <div>
            <img src="/img/profile-placeholder.png" alt="Profile Image" style="min-width:50px; max-width:100px">
        </div>
        <div class="text-center">
            <span class="text-blue-500">{{post.user.name}} </span>
        </div>
        <div class="text-center mt-1">
            <span class="text-blue-500">{{format_date post.date_created}}</span> 
        </div>
    </div>
    <div class="ml-6 w-full">
        <h2 class="font-bold text-3xl pb-2">      
            <a href="/posts/{{post.post_id}}">{{post.post_title}}</a>
        </h2>
         <div>
            <p class="py-4">{{post.post_body}}</p>
        </div>  
        <br>
        <hr>
        <br>
        {{#each post.answers as |answer|}}
        <div>
            <div>
                <p>{{answer.user.name}}</p>
            </div>
            <div>
                {{answer.answer_body}}
            </div>
                {{!-- {{#if logged_in}} --}}
                {{!-- {{#if (eq answer.user_id ../session.user_id)}} --}}  
                {{!-- {{/if}} --}}
                {{!-- {{/if}} --}}
            <br>
            <hr>
            <br>
            {{/each}}
        </div>
    </div>
    <div class="">
        <form id="add-answer-form">
            <div>
                <label for="answer-body" class="font-bold text-1xl pb-2">Your answer:</label>
            </div>
            <div>
                <div>
                    <textarea id="answer-body" name="answer-body" placeholder="Add your answer here ..." class="w-full p-8 rounded-lg shadow-md border text-gray-800 border-blue-500 placeholder:text-blue-500"></textarea>
                    <input type="hidden" name="post-id" id="post-id" value="{{post.post_id}}">
                </div>
                <div class="mt-3" style="display: flex; justify-content: flex-end;">
                    {{!-- {{#if logged_in}} --}}
                    <button 
                        type="submit"
                        class="p-3 rounded-lg shadow-md text-slate-100 bg-blue-500 hover:bg-blue-400 transition duration-300 ease-in-out"
                        >Reply
                    </button>
                    {{!-- {{else}} --}}
                    {{!-- <p>Please log in to add an answer.</p> --}}
                    {{!-- {{/if}} --}}
                </div>
            </div>
        </form>
    </div>
</div>



